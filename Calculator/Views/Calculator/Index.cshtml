@model Calculator.Models.CalculatorModel

@{
    ViewBag.Title = "Simple Calculator";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Simple Calculator</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Calculate", "Calculator", FormMethod.Post, new { @class = "form" }))
                    {
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Number1, "First Number:", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Number1, new { 
                                @class = "form-control", 
                                type = "number", 
                                step = "any", 
                                placeholder = "Enter first number"
                            })
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Operation:</label>
                            <select name="Operation" class="form-control" required>
                                <option value="">Select operation</option>
                                <option value="+">+ (Addition)</option>
                                <option value="-">- (Subtraction)</option>
                                <option value="*">* (Multiplication)</option>
                                <option value="/">/ (Division)</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Number2, "Second Number:", new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Number2, new { 
                                @class = "form-control", 
                                type = "number", 
                                step = "any", 
                                placeholder = "Enter second number"
                            })
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Calculate
                        </button>
                    }

                    @if (Model != null)
                    {
                        // Show error message if there is one
                        if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger mt-3">
                                @Model.ErrorMessage
                            </div>
                        }
                        
                        // Show result if there's no error message and operation was performed
                        if (string.IsNullOrEmpty(Model.ErrorMessage) && !string.IsNullOrEmpty(Model.Operation))
                        {
                            <div class="alert alert-success mt-3">
                                <h5 class="alert-heading">Result:</h5>
                                <p class="mb-0 fs-4">
                                    @Model.Number1 @Model.Operation @Model.Number2 = <strong>@Model.Result</strong>
                                </p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set the selected operation and values after postback
        $(document).ready(function () {
            // Set input values
            $('#Number1').val('@Model?.Number1');
            $('#Number2').val('@Model?.Number2');
            
            // Set selected operation
            var operation = '@Model?.Operation';
            if (operation) {
                $('select[name="Operation"]').val(operation);
            }
        });
    </script>
}